BasedOnStyle: LLVM
IndentWidth: 2
TabWidth: 2
UseTab: Never

BreakBeforeBraces: Attach   # mantém { na mesma linha

AllowShortFunctionsOnASingleLine: Empty   # só funções realmente vazias ficam inline
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false

ColumnLimit: 100   # bom, não exagera na largura

IndentCaseLabels: true
IndentGotoLabels: true

AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true

PointerAlignment: Left   # SDL-style, bem comum em engines

SpacesBeforeTrailingComments: 1
SpaceBeforeParens: ControlStatements

SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<SDL2/.*>'
    Priority: 2
  - Regex: '^"'
    Priority: 3
  - Regex: '.*'
    Priority: 1

ReflowComments: true

AlwaysBreakAfterReturnType: None
AlwaysBreakTemplateDeclarations: Yes

Cpp11BracedListStyle: true

BinPackParameters: false   # quebra parâmetros longos em linhas
BinPackArguments: false

BreakConstructorInitializers: AfterColon
ConstructorInitializerAllOnOneLineOrOnePerLine: true
ConstructorInitializerIndentWidth: 2

NamespaceIndentation: All   # indenta código dentro do namespace
